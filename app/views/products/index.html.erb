<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Base price</th>
      <th>Base currency</th>
      <th>Barcode number</th>
      <th>Num to buy</th>
      <th>Num will get</th>
      <th>Bulk threshold</th>
      <th>Bulk price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.base_price %></td>
        <td><%= product.base_currency %></td>
        <td><%= product.barcode_number %></td>
        <td><%= product.num_to_buy %></td>
        <td><%= product.num_will_get %></td>
        <td><%= product.bulk_threshold %></td>
        <td><%= product.bulk_price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

